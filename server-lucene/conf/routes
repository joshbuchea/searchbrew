# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           com.searchbrew.Application.index

GET     /docs                       com.searchbrew.Application.search(q: Option[String])

GET     /indexhomepage              com.searchbrew.Application.indexHomepage()
GET     /indexdescriptions          com.searchbrew.Application.indexDescriptions()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
